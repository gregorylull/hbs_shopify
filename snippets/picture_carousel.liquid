<div id="frontpage_carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#frontpage_carousel" data-slide-to="0" class="active"></li>
    <li data-target="#frontpage_carousel" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
      {% for i in (0..1) %}
        {% if forloop.first == true %}
          <div class="item active">
        {% else %}
          <div class="item">
        {% endif %}
            {% capture pic_file_name %}{{ "homepage_slideshow_pic_" | append: i | append: '.png' }}{% endcapture %}
            {{ pic_file_name | asset_url | img_tag }}
            <script> console.log('filename:', {{pic_file_name | json }})</script>
            <div class="carousel-caption">{{i}}</div>
          </div>
      {% endfor %}
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#frontpage_carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#frontpage_carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>