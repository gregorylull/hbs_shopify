/******************************************************************************
  ABOUT US PAGE: EXEC TEAM PROFILE
******************************************************************************/
/* mobile first */
.aboutus_execprofile_container {
	width: 100%;
	margin: 0px auto;
	text-align: center;
}

.aboutus_execprofile_divider {
	width: 100%;
	border: 2px solid #FF6600;
	margin: 15px 0px;
}

/* tablet? 7 + 200 + 7 + 7 + 200 + 7 === 428*/
@media screen and (min-width: 590px) {
	.aboutus_execprofile_container {
		width: 580px;
		margin: 0px auto;
	}
}

/* desktop? 15 + 200 + 15 + 15 + 200 + 15 + 15 + 200 + 15 + 15 + 200 + 15=== 920px */
@media screen and (min-width: 880px) {
	.aboutus_execprofile_container {
		width: 875px;
		margin: 0px auto;
	}
}

.aboutus_execprofile_profile_wrapper {
	margin: 15px 7px;
	padding: 0px;
	display: inline-block;
	text-align: center;
	vertical-align: top;
	font-size: 1.5em;
	font-family: serif;
}

.aboutus_execprofile_profile_info {
	width: 200px;
	height: auto;
	position: relative;
}

.aboutus_execprofile_profile_info img {
	width: 100%;
	height: auto;
	border-radius: 1%;
}

/* inner text that shows up in the picture */
.aboutus_execprofile_profile_description {
	color: rgba(0,0,0,0);
	position: absolute;
	top: 1px;
	left: 1px;
	padding: 5px 10px;
	font-size: 14px;
	line-height: 1.3;
}

.aboutus_firstrow_end {
}

.aboutus_execprofile_profile_name {
}

.aboutus_execprofile_profile_position {
	font-size: 0.75em;
}


.aboutus_execprofile_profile_email {
	text-decoration: none;
	font-size: 0.75em;
}

.aboutus_execprofile_profile_info:hover img {
	opacity: 0.15;
	-webkit-transition: opacity 0.2s ease-in-out;
	-moz-transition: opacity 0.2s ease-in-out;
	-ms-transition: opacity 0.2s ease-in-out;
	-o-transition: opacity 0.2s ease-in-out;
	transition: opacity 0.2s ease-in-out;
}

.aboutus_execprofile_profile_info:hover .aboutus_execprofile_profile_name,
.aboutus_execprofile_profile_info:hover .aboutus_execprofile_profile_position,
.aboutus_execprofile_profile_info:hover .aboutus_execprofile_profile_email {
	opacity: 0.1;
}

.aboutus_execprofile_profile_info:hover p {
	color: rgba(0,0,0,1);
}

/******************************************************************************
  EVENTS PAGE
******************************************************************************/

/* mobile first */
.eventspage_container {
	width: 100%;
	margin: 0px auto;
	text-align: justify;
}

.eventspage_divider {
	width: 100%;
	border: 2px solid #A32638;
	margin: 15px 0px;
}

/* tablet? 15 + 250 + 15 + 15 + 250 + 15*/
@media screen and (min-width: 590px) {
	.eventspage_container {
		width: 580px;
		margin: 0px auto;
	}
}

/* desktop? 15 + 250 + 15 + 15 + 250 + 15 + 15 + 250 + 15 === 840px */
@media screen and (min-width: 880px) {
	.eventspage_container {
		width: 850px;
		margin: 0px auto;
	}
}

.eventspage_event_wrapper {
	margin: 15px;
	padding: 0px;
	display: inline-block;
	text-align: center;
	vertical-align: top;
	font-size: 1.5em;
	font-family: serif;
}

.eventspage_event_info {
	width: 250px;
	position: relative;
}

.eventspage_event_info img {
	width: 100%;
	height: auto;
	border-radius: 50%;
	border: 4px solid #A32638;
}

/* inner text that shows up in the picture */
.eventspage_event_description {
	color: rgba(0,0,0,0);
	position: absolute;
	top: 1px;
	left: 1px;
	margin: 37.5px;
	text-align: center;
	font-size: 0.75em;
}

.eventspage_event_title {
	position: absolute;
	top: 50%;
	left: 2.5px;
	width: 98%;
	background: rgba(70,70,70,0.8);
	color: rgba(255,255,255,0.9);
	border-radius: 30%;
}

.eventspage_event_date {
	font-size: 0.75em;
	margin-bottom: 5px;
}

.eventspage_event_rsvp_link {
	text-decoration: none;
}

.eventspage_event_info:hover img {
	opacity: 0.15;
	-webkit-transition: opacity 0.2s ease-in-out;
	-moz-transition: opacity 0.2s ease-in-out;
	-ms-transition: opacity 0.2s ease-in-out;
	-o-transition: opacity 0.2s ease-in-out;
	transition: opacity 0.2s ease-in-out;
}

.eventspage_event_info:hover .eventspage_event_title {
	opacity: 0.1;
}

.eventspage_event_info:hover p {
	color: rgba(0,0,0,1);
}
