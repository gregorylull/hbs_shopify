
/*  universal */

.gl_clearfix::after {
	display: block;
	content: " ";
	clear: both;
	line-height: 0;
	font-size: 0;
}

/* outlining front page (index.liquid) */
img {
	width: 100%;
}

.frontpage_md_leftColumn {
  border: 2px solid black;
}

.frontpage_md_rightColumn {
	border: 2px solid black;
}

.frontpage_md_contact {
	background-color: yellow;
}

.frontpage_md_upcomingEvents {
	background-color: orange;
}

.frontpage_md_pulseFeature {
	background-color: #ADD8E6;
}

.frontpage_md_featuredProduct {
	background-color: #76EE00;
}

.frontpage_md_mission {
	background-color: #D3D3D3;
}

.frontpage_md_pulseNews {
	background-color: pink;
}

/******************************************************************************
  EVENTS PAGE
******************************************************************************/

/* mobile first */
.eventspage_container {
	width: 100%;
	margin: 0px auto;
	text-align: justify;
}

.eventspage_divider {
	width: 100%;
	border: 2px solid #A32638;
	margin: 15px 0px;
}

/* tablet? 15 + 250 + 15 + 15 + 250 + 15*/
@media screen and (min-width: 590px) {
	.eventspage_container {
		width: 580px;
		margin: 0px auto;
	}
}

/* desktop? 15 + 250 + 15 + 15 + 250 + 15 + 15 + 250 + 15 === 840px */
@media screen and (min-width: 880px) {
	.eventspage_container {
		width: 850px;
		margin: 0px auto;
	}
}

.eventspage_event_wrapper {
	/*float: left;*/
	margin: 15px;
	padding: 0px;
	display: inline-block;
	text-align: center;
	vertical-align: top;
	font-size: 1.5em;
	font-family: serif;
}

.eventspage_event_info {
	width: 250px;
	position: relative;
}

.eventspage_event_info img {
	width: 100%;
	border-radius: 50%;
	border: 4px solid #A32638;
}

/* inner text that shows up in the picture */
.eventspage_event_description {
	color: rgba(0,0,0,0);
	position: absolute;
	top: 1px;
	left: 1px;
	margin: 37.5px;
	text-align: center;
	font-size: 16px;
}

.eventspage_event_title {
	position: absolute;
	top: 50%;
	left: 2.5px;
	width: 98%;
	background: rgba(70,70,70,0.7);
	color: rgba(255,255,255,0.9);
	border-radius: 30%;
}

.eventspage_event_rsvp_link {
	text-decoration: none;
}

.eventspage_event_info:hover img {
	opacity: 0.15;
	-webkit-transition: opacity 0.2s ease-in-out;
	-moz-transition: opacity 0.2s ease-in-out;
	-ms-transition: opacity 0.2s ease-in-out;
	-o-transition: opacity 0.2s ease-in-out;
	transition: opacity 0.2s ease-in-out;
}

.eventspage_event_info:hover .eventspage_event_title {
	opacity: 0.1;
}

.eventspage_event_info:hover p {
	color: rgba(0,0,0,1);
}
